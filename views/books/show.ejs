<%- include('../partials/header') %>

<section id="show-page">
  <div>Title: <%= book.title %></div>
  <div>Published Year: <%= book.publishedYear %></div>
  <div>Genre: <%= book.genre %></div>
  <ul>
</section>

<% if (book.reviews.length) { %>
  <table>
    <thead>
      <tr>
        <th>Date</th>
        <th>Review</th>
        <th>Rating</th>
      </tr>
    </thead>
    <tbody>
      <% book.reviews.forEach(function(r) { %>
        <tr>
          <!-- .toLocaleDateString() provides a more friendly date format -->
          <td><%= r.createdAt.toLocaleDateString() %></td>
          <td><%= r.content %></td>
          <td><%= r.rating %></td>
        </tr>
      <% }); %>
    </tbody>
  </table>
<% } else { %>
  <h5>No Reviews Yet</h5>
<% } %>

<!-- add to cast form below this comment -->
<section>
<br><br><h2>Reviews</h2>
<form id="add-review-form" method="POST"
  action="/books/<%= book._id %>/reviews">
  <label>Review:</label>
  <textarea name="content"></textarea>
  <br/>
  <label>Rate 1 to 10:</label>
  <input type="text" name="rating"><br/><br/>

  <input type="submit" value="Add Review">
</form>

</section>
<%- include('../partials/footer') %>
